{
  "comment": {
      "allowed": true
  },
  "duplicateProperty": {
    "exclude": [
      "-webkit-transition-property",
      "background",
      "background-image",
      "src",
      "transition-property",
      "width"
    ]
  },
  "emptyRule": false,
  "finalNewline": true,
  "hexNotation": {
      "style": "lowercase"
  },
  "hexLength": false,
  "idSelector": false,
  "importantRule": false,
  "newlineAfterBlock": false,
  "propertyOrdering": false,
  "propertyUnits": false,
  "qualifyingElement": false,
  "singleLinePerProperty": {
      "allowSingleLineRules": true
  },
  "singleLinePerSelector": false,
  "spaceAfterPropertyColon": false,
  "spaceAroundComma":{
      "allowNewline": true
  },
  "spaceBeforeBrace": false,
  "stringQuotes": {
      "style": "double"
  },
  "trailingSemicolon": true,
  "urlQuotes": true,
  "universalSelector": false,
  "zeroUnit": {
      "style": "no_unit"
  }
}